
{{#extend 'main'}}

  {{#content 'body'}}
    <h2>{{title}}</h2>
    <p>{{content}}</p>
    <small>By {{user.username}} on {{format_date createdAt}}</small>

    <div class="comments">
      <h3>Comments</h3>
      {{#each comments}}
        <div class="comment">
          <p>{{this.comment_text}}</p>
          <small>By {{this.user.username}} on {{format_date this.createdAt}}</small>
        </div>
      {{/each}}
    </div>

    {{#if logged_in}}
      <form class="comment-form">
        <div class="form-group">
          <label for="comment-text">Add a comment:</label>
          <textarea id="comment-text" name="comment" rows="4"></textarea>
        </div>
        <button type="submit">Submit</button>
      </form>
    {{else}}
      <p>You must be logged in to leave a comment.</p>
    {{/if}}
  {{/content}}

{{/extend}}
